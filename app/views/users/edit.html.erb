<div class="container-fluid d-flex flex-column justify-content-center align-items-center w-100">
    <h1>Editing Client Details</h1>

    <%= form_with scope: :user, url: update_client_path, local: true do |form|%>
        <% if @user.errors.any? %>
            <div id="error_explanation">
            <h2><%= pluralize(inventory.errors.count, "error") %> prohibited client details from being saved:</h2>

            <ul>
                <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
                <% end %>
            </ul>
            </div>
        <% end %>

        <div class="field">
            <%= form.label :full_name %> <br />
            <%= form.text_field :full_name %>
        </div>

        <div class="field">
            <%= form.label :email %> <br />
            <%= form.text_field :email, disabled: true%>
        </div>

        <br/>

        <div class="actions">
            <%= form.submit "Update User Details", class: 'btn primary-background btn-custom w-100' %>
        </div>
    <% end %>
</div>
