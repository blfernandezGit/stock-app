<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
  </symbol>
</svg>

<div class="container-fluid d-flex flex-column justify-content-center align-items-center w-100">
  <% if notice %>
    <div class="alert alert-success d-flex align-items-center w-100" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
      <div>
        <%= notice %>
      </div>
    </div>
  <% end %>

<h1>Create New Client Account</h1>

<%= form_with scope: :user, url: create_client_path, local: true, class: 'w-50 ' do |form|%>
    <% if @user.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited client details from being saved:</h2>

        <ul>
            <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :full_name %><br />
        <%= form.text_field :full_name, class: 'w-100' %>
    </div>

    <div class="field">
        <%= form.label :email %><br />
        <%= form.text_field :email, class: 'w-100' %>
    </div>

    <div class="field">
        <%= form.label :password %><br />
        <%= form.password_field :password, class: 'w-100' %>
    </div>

    <div class="field">
        <%= form.label :password_confirmation %><br />
        <%= form.password_field :password_confirmation, class: 'w-100' %>
    </div>

    <div class="field">
        <%= form.label :status %><br />
        <%= form.select :status, ['accepted', 'pending'], value: 'accepted' %>
    </div>

    <br />

    <div class="actions">
        <%= form.submit 'Create', class: "btn primary-background btn-custom w-100" %>
    </div>
<% end %>
</div>
