<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
  </symbol>
</svg>

<div class="container-fluid d-flex flex-column justify-content-center align-items-center w-100">
  <% if notice %>
    <div class="alert alert-success d-flex align-items-center w-100" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
      <div>
        <%= notice %>
      </div>
    </div>
  <% end %>

  <h1>Portfolio</h1>

  <% @inventories.each do |inventory| %>
    <div class="container border rounded d-flex flex-column w-80 p-4">
      <h3 class="w-100"><%= Stock.find(inventory.stock_id).name %></h3>
      <div class="w-100">Gain/loss: $<%= inventory.market_value.to_d - current_user.transactions.select('sum(quantity*unit_price) as total_value').where(stock_id: Stock.find(inventory.stock_id).id).map(&:total_value)[0].to_d %></div>
      <div class="w-100">Market Value: $<%= inventory.market_value %></div>
      <div class="w-100">Quantity: <%= inventory.quantity %></div>
      <div class="w-100">Unit Price: $<%= Stock.find(inventory.stock_id).price %></div>
    </div>
    <br />
  <%end%>
</div>